@article{odhiambo_role_2025,
	title = {Role of {EdTech} on foundational numeracy and literacy for children with functional difficulties: Experimental evidence from Kenya},
	abstract = {Children with functional difficulties, most of whom live in low- and middle-income countries, have lower foundational literacy and numeracy ({FLN}) skills, primarily due to irregular school attendance, disability-related instructional challenges, and broader structural barriers. Yet, despite these persistent learning gaps, few studies have examined the impact of assistive technologies—beyond wearable devices—on their educational outcomes. In this study, we conduct a field experiment to assess the effect of an educational technology intervention on {FLN} skills of children with functional difficulties in a low-income setting with a high disability incidence. Participants are recruited through a government-led school disability screening program. Those assigned to the intervention group are then provided with a mobile device pre-installed with a computer-assisted learning application designed to support self-regulated study. Eight months post-intervention, we find positive effects on both numeracy and literacy. Aggregate literacy and numeracy skills increase by 0.15 and 0.13 standard deviations ({SD}) respectively, exceeding 50th and 70th percentile of {SD} effects reported in other studies exploring literacy and numeracy outcomes respectively. Females benefit less, particularly on higher-order numeracy and literacy skills. Our treatment effects are primarily driven by usage, rather than by changes in study effort or time allocation, perceptions about schooling, interactions with teachers and peers or in mental wellbeing. We conclude that {EdTech} interventions can be effective in improving {FLN} for children with functional difficulties.},
	author = {Odhiambo, Frank and Günther, Isabel},
	date = {2025},
	langid = {english},
}

@article{meili_intersectional_2022,
	title = {Intersectional Inequality in Education},
	abstract = {Intersectional inequality – the notion that disparities run along the lines of combinations of salient social groups such as gender or ethnicity – has become an increasingly prominent concept in the social sciences. Yet, because of the number of possible combinations of groups, embedding intersectionality into the measurement of inequality has proven to be analytically complex. Hence there is little empirical research applying an intersectional framework to measure inequality. We incorporate intersectionality into the measurement of between-group inequalities in educational attainment using {DHS} data from 39 low- and middle-income countries and the United States. Using schooling ratios between lower and higher educated groups as an inequality measure, we show that the intersectional perspective unveils a lot of inequality that remains masked if gender and ethnicity are considered in isolation. Generally, intersectional inequality in education is driven more by ethnic inequality than gender inequality. Further, we develop a novel metric to evaluate the relevance of intersectionality compared to standard approaches of between-group inequality measurement. The new metric, Surplus Intersectionality, reveals substantial heterogeneity between countries in terms of how much intersectionality is present. While gender, ethnic and intersecting inequality all seem to be driven mainly by a country’s average education level, this is not the case for Surplus Intersectionality.},
	author = {Meili, Dario and Günther, Isabel and Harttgen, Kenneth},
	date = {2022},
	langid = {english},
}

@article{odhiambo_does_2025,
	title = {Does policy matter in low-income countries? The impact of disability legislation on the educational attainment of children with disability in sub-Saharan Africa},
	abstract = {In many parts of the world, children with disabilities are excluded from education. The disability gap in education is larger in low and middle-income countries, where disability legislation is also much less present. Yet, little is known globally about the effects of disability legislation on the education outcomes of children with disability. Using individual-level data from ten countries, five of which have enacted disability legislation, we employ a difference-in-difference methodology to assess changes in educational outcomes post-legislation. We find that disability legislation significantly improves enrollment, attendance rates and years of schooling, highlighting its role in reducing educational disparities for children with disabilities. We also find heterogeneity in treatment effects across different disability domains— legislation appears to have larger effects on children with hearing disabilities than those with visual disabilities—and age cohorts. Our findings have important policy implications for enhancing educational equity in regions with high disability prevalence and limited legislative coverage, highlighting disability legislation’s potential in such settings.},
	author = {Odhiambo, Frank and Günther, Isabel and Harttgen, Kenneth},
	date = {2025},
	langid = {english},
}

@article{odhiambo_analyzing_2025,
	title = {Analyzing self-regulated learning with {EdTech} in low-income settings},
	abstract = {This paper examines how students engage with self-directed educational technology in out-of-school settings in low-income settings. While evidence suggests {EdTech} can support learning in low- and middle-income countries, little research explores students’ autonomous usage patterns. We distributed tablets with a multi-subject learning application to 313 students across 63 primary schools in Homabay, a largely rural county in Kenya, and tracked engagement patterns over 18 months through survey and serverbased usage data. We find that while tablet ownership remained high eight months after distribution, app usage was relatively limited, with children using the app for about three months on average. On active days, users engaged for nearly 50 minutes, primarily with Math and English content. Across all grades, students generally selected content below their current grade level, with a substantial share engaging with material at Grade 1 level or below. Nevertheless, usage patterns suggest intentional study choices: students actively switched subjects and grade levels, and most engaged with material that posed some challenge. Boys were more likely to interact with more difficult content, particularly at or above their grade level. We also provide some evidence that a light touch increases engagement with the app, and also document some lessons for implementing {EdTech} interventions in similar settings.},
	author = {Odhiambo, Frank and Günther, Isabel and Bitterli, Luc},
	date = {2025},
	langid = {english},
}

