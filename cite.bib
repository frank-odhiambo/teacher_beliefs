	number = {11},
	journaltitle = {{PLOS} {ONE}},
	shortjournal = {{PLOS} {ONE}},
	author = {Wang, Xiuqin and Congdon, Nathan and Ma, Yue and Hu, Min and Zhou, Yuan and Liao, Weiqi and Jin, Ling and Xiao, Baixiang and Wu, Xiaoyi and Ni, Ming and Yi, Hongmei and Huang, Yiwen and Varga, Beatrice and Zhang, Hong and Cun, Yongkang and Li, Xianshun and Yang, Luhua and Liang, Chaoguang and Huang, Wan and Rozelle, Scott and Ma, Xiaochen},
